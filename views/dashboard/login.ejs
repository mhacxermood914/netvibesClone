<div class="flex justify-center items-center h-screen bg-gray-200 px-6">
    <div class="p-6 max-w-sm w-full bg-white shadow-md rounded-md">
        <div class="flex justify-center items-center">

            <span class="text-gray-700 font-semibold text-2xl">ZeddVibes</span>
        </div>

        <form class="mt-4"  method="post"  id="login">
            <label class="block">
                <span class="text-gray-700 text-sm">Email</span>
                <input type="email"
                    name="email"
                    value=""
                    class="form-input mt-1 block w-full p-2 rounded-md border-2 border-green-400 focus:ring-2 focus:ring-opacity-40 focus:ring-green-600 outline-none">
                    <span class="email-login-error-message hidden text-red-400"></span>
            </label>

            <label class="block mt-3">
                <span class="text-gray-700 text-sm">Password</span>
                <input type="password"
                    value=""
                    name="password"
                    class="form-input mt-1 p-2 block w-full rounded-md border-2 border-green-400 focus:ring-2 focus:ring-opacity-40 focus:ring-green-600 outline-none">
                    <span class="password-login-error-message hidden text-red-400"></span>
                    <span class="error-login-message hidden text-red-400"></span>
            </label>

            <div class="mt-6">
                <button
                    class="py-2 px-4 text-center bg-green-600 rounded-md w-full text-white text-sm hover:bg-indigo-500">
                    Login in
                </button>
            </div>
        </form>
    </div>
</div>
